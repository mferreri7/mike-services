<div class="container" style="color: rgba(0,0,0,0.6); min-height: calc(100vh - 150px); height: 100%; margin-bottom: 150px; background-color: whitesmoke;">
  <h1 class="text-center" style="font-size: 24px; font-weight: bold;">
    El Mike Services
    <i class="fas fa-copyright"></i>
  </h1>
  <p class="text-center" style="font-size: 14px;">Tu plataforma web para pedirle favores al Mike</p>
    <div class="footer-copyright" style="display: flex; align-items: center; justify-content: space-between;font-size: 10px; text-align: right; margin-bottom: 12px;">
      <div style="font-size: 12px; width: 100px">
        <a style="color: #25d366; color: #25d366; border: solid 2px #25d366;border-radius: 8px; padding: 2px 8px;" href="https://wa.me/?text=<%= root_url %>">Compartir <i class="fab fa-whatsapp" style="color: #25d366;"></i></a>
      </div>
      <div>
          Made with <i class="fa fa-heart" style="color: red;"></i> By:<a href="https://www.instagram.com/12_startups/" target="_blank"> Mike @12_startups <i class="fab fa-instagram"></i></a>
      </div>
    </div>
  <hr style="margin-top: 0px;">
  <h3 class="text-center" style="font-size: 16px; font-weight: lighter;">Servicios que otros han pedido:</h3>
  <% @tasks.each do |task| %>
  <div class="order-news <%= "tachado" if task.status %>" data-id="<%= task.id %>">
    <div class="message">
      <%= feed_photo_or_generic(task.user.downcase) %>
      <div class="message-name">
        <div class="table-name-and-date">
           <div class="full_name">
            <h3><%= task.user.capitalize %></h3>
          </div>
          <div class="time_ago">
            <p>hace <%= distance_of_time_in_words(Time.now, task.created_at) %>.</p>
          </div>
        </div>
        <p>Pidió <strong><%= task.description %></strong>.  <i class="em <%= @icons.sample(1)[0].to_s %>"></i> </p>
      </div>
    </div>
    <% if current_user %>
      <div class="update-action">
        <%= link_to "Borrar", task_path(task), method: "DELETE", class: "red", data: { confirm: "Seguro?" } %>
        <% text = task.status ? "Deshacer" : "Completar" %>
        <%= link_to text, task_path(task), method: "PATCH", remote: true , class: "complete-task-btn" %>
      </div>
    <% end %>
  </div>
  <% end %>
  <br>
  <div class="footer navbar-fixed-bottom text-center" style="background-color: white; padding: 16px;box-shadow: 0px 0px 1em rgba(0,0,0,0.1); }">
    <style>
      input, input::placeholder {
        font-size: 12px;
        text-align: center;
      }
      input {
        border-radius: 25px !important;
      }
    </style>
    <div class="row"
    style="
    font-size: 12px !important;">
      <%= simple_form_for Task.new, html: { class: "" } do |f| %>
        <%= f.input :status, as: :hidden, input_html: { value: false } %>
      <div class="col-xs-6">
        <%= f.input :description, label: "¿Qué necesitas?", placeholder: "Ej: Una costeñita" %>
      </div>
      <div class="col-xs-6">
        <%= f.input :user, label: "¿Quién eres?", placeholder: "Ej: El Mike" %>
      </div>
      <div class="col-xs-12">
        <% text_options = %w[#HelpMeMike #AuuidaMike #TirateUn14Mike #HacemeUnCruceMike] %>
        <%= button_tag type: 'submit', class: "btn order-more-button" do %>
          <%= text_options.sample %>
          <i class="fas fa-medkit"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
