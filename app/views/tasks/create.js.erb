function refreshForm(innerHTML) {
  const newReviewForm = document.getElementById('new_task');
  newReviewForm.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  const cardsContainer = document.querySelector(".cards-container")
  cardsContainer.insertAdjacentHTML('afterbegin', reviewHTML);
}

<% if @task.errors.any? %>
  refreshForm('<%= j render "shared/task-form", task: @task %>');
<% else %>
  // addReview('<%= j render "shared/task-card", task: @task %>');
  refreshForm('<%= j render "shared/task-form", task: Task.new %>');
<% end %>
