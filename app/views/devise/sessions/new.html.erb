
<div class="container" style="background-color: white; border-radius: 8px; box-shadow: 1px 1px 1px rgba(0,0,0,0.2); margin: 16px;">
  <h2 class="text-center">Inicia Sesi√≥n</h2>
  <p  class="text-center">Y empieza a ayudar al mike con los favores</p>
  <div class="row">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="col-xs-12">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>

        </div>
        <div class="col-xs-12">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>

        </div>
        <div class="col-xs-12">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn order-more-button" %>
        </div>
        <div style="float: right; font-size: 12px;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

