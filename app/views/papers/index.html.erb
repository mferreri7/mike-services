<div
  class="paper-cards-container"
  data-controller="papers"
  data-papers-team-id-left="<%= @team1.id %>"
  data-papers-team-id-right="<%= @team2.id %>"
  data-papers-check-papers-interval=1000
  data-papers-redirect-url="<%= players_path %>"
>
  <h4 class="text-center" id="timer" data-target="papers.timer">1:00</h3>
  <div class="cards-container">
    <% @papers.each do |paper| %>
      <div class="card-item" data-fetch-url="<%= paper_path paper %>" data-count="<%= paper.count %>" data-target="papers.card" >
        <%= paper.description %>
      </div>
    <% end %>
  </div>
  <div class="global-actions">
    <div class="action action--left" data-action="click->papers#pointForLeftTeam"><%= @team1.name %></div>
    <div class="action action--center" data-action="click->papers#unblockButtonOnClients" >
      <%= link_to "Volver", players_path %>
    </div>
    <div class="action action--right" data-action="click->papers#pointForRightTeam"><%= @team2.name %></div>
  </div>
</div>
